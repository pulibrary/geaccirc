<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Barcode</th>
      <th>Author</th>
      <th>Title</th>
      <th>Call no</th>
      <th>Sub loc</th>
      <th>Location</th>
      <th>Copy</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.barcode %></td>
        <td><%= record.author %></td>
        <td><%= record.title %></td>
        <td><%= record.call_no %></td>
        <td><%= record.sub_loc %></td>
        <td><%= record.location %></td>
        <td><%= record.copy %></td>
        <td><%= record.status %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

